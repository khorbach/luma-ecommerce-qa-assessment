{
  "compilerOptions": {
    "target": "ES6",                          // ES6 is usually a good target for modern code
    "module": "commonjs",                      // CommonJS is standard for Node.js
    "moduleResolution": "node",                // For resolving Node modules
    "outDir": "./dist",                        // Output directory for compiled files
    "esModuleInterop": true,                   // To allow import/export interop between CommonJS and ES modules
    "resolveJsonModule": true,                 // Enable importing .json files
    "strict": true,                            // Enable all strict type-checking options
    "skipLibCheck": true,                      // Skip checking of library files for performance
    "forceConsistentCasingInFileNames": true   // Enforces consistent file naming conventions
  },
  "include": ["tests/**/*.ts"],                  // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]                  // Exclude the node_modules folder
}
